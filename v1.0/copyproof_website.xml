<?xml version="1.0" encoding="UTF-8"?>
<extension type="plugin" version="5.0" group="system" method="upgrade">
    <name>System - CopyProof Website, Free Version</name>
	<author>Tawhidur Rahman Dear</author>
    <creationDate>6 September 2018</creationDate>
    <copyright>Tawhidur Rahman Dear</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <authorEmail>tawhidurrahmandear@gmail.com</authorEmail>
    <authorUrl>https://dearstore.gumroad.com/l/Copyproof-Joomla-Website</authorUrl>
    <version>1.0</version>
    <updateservers>
        <server type="extension" name="copyproof_website">
       https://raw.githubusercontent.com/tawhidurrahmandear/copyproof-website/refs/heads/main/copyproof_website.xml
        </server>
    </updateservers>
    <description>Protect articles, news, blogs, or text content from thieves</description>
    <install>
        <php min="8.0" max="8.3" />
        <joomla min="4.0" max="5.2" />
    </install>
    <files>
        <file plugin="copyproof_website">copyproof_website.php</file>
    </files>
    <media folder="media">
        <folder>plg_system_copyproof_website</folder>
    </media>
<languages folder="language">
    <language tag="en-GB">en-GB.plg_system_copyproof_website.ini</language>
</languages>
	<group>system</group>
    <manifest>
        <cache>off</cache>
    </manifest>
</extension>